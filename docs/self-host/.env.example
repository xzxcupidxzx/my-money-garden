# =============================================
# Self-Host Environment Variables
# Copy this to .env and fill in your values
# =============================================

# POSTGRES
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secret-password
POSTGRES_DB=postgres

# SUPABASE
# Generate JWT_SECRET with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long

# Generate keys at: https://supabase.com/docs/guides/self-hosting#api-keys
ANON_KEY=your-anon-key
SERVICE_ROLE_KEY=your-service-role-key

# URLs
API_EXTERNAL_URL=http://your-nas-ip:8000
SUPABASE_PUBLIC_URL=http://your-nas-ip:8000
SITE_URL=http://your-nas-ip:3000
ADDITIONAL_REDIRECT_URLS=http://your-nas-ip:3000

# SMTP (Optional - for email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_ADMIN_EMAIL=your-email@gmail.com

# Dashboard
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-dashboard-password

# Disable signup if using Cloudflare Zero Trust
DISABLE_SIGNUP=false
